rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    // - Users can read/write their own document
    // - Admins can read/write any user document (needed for Invite Member)
    // - Authenticated users can read users (needed for counts/queries in app)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Update rules:
      // 1. Admins can update anything.
      // 2. Users can update their own doc BUT cannot change the 'role' field.
      allow update: if request.auth != null && (
        isAdmin() || 
        (request.auth.uid == userId && request.resource.data.role == resource.data.role)
      );
      allow delete: if isAdmin();
    }

    // System counters collection for atomic ID generation and team codes
    match /counters/{document} {
      allow read, write: if request.auth != null;
    }
    
    // System collection for User Unique IDs (used by id-generator.ts)
    match /system/{document} {
      allow read, write: if request.auth != null;
    }

    // Settings (for Gallery Config, Recruitment etc)
    match /settings/{document} {
      allow read: if true;
      allow write: if isAdmin() || isPublicRelation() || (document == 'recruitment' && isCoordinator());
    }

    // Trainees (New Collection)
    match /trainees/{traineeId} {
       // Allow authenticated users (guests) to submit their application
       allow create: if request.auth != null; 
       allow read: if isCoordinator() || isAdmin(); 
       allow update: if isCoordinator() || isAdmin();
       allow delete: if isCoordinator() || isAdmin();
    }

    // Site Settings (for Contact Page etc)
    match /site_settings/{document} {
      allow read: if true;
      allow write: if isAdmin() || isPublicRelation();
    }

    // Leaders (Team)
    match /leaders/{leaderId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery Events
    match /gallery_events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isPublicRelation();
    }

    // Projects Collection
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Events collection: public readable; admin-only writes, but users can update registered count
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isPublicRelation();
      // Allow authenticated users to update only the registered field for event registration
      allow update: if request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registered']) &&
        request.resource.data.registered is int &&
        (request.resource.data.registered >= (resource.data.registered != null ? resource.data.registered : 0));
    }

    // Registrations: a user can create/read their own registrations; admin can read all
    match /registrations/{regId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null; 
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Notifications: Users can read their own, system/others can write
    match /notifications/{notificationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null; 
      allow update: if request.auth != null && resource.data.userId == request.auth.uid; 
    }

    // Teams: users can create/read teams they're part of; admin can read all
    match /teams/{teamId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      
      allow update: if request.auth != null && (
        isAdmin() ||
        resource.data.leaderId == request.auth.uid ||
        (request.auth.uid in resource.data.memberIds) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pendingRequests'])) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'memberIds'])) // Allow updating members
      );
      allow delete: if request.auth != null && (
        isAdmin() ||
        resource.data.leaderId == request.auth.uid
      );
    }

    // Team invitations: users can create/read their own invitations
    match /teamInvitations/{invitationId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
      allow update: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
      allow delete: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid
      );
    }

    // Attendance
    match /attendance/{recordId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && isCoordinator();
      allow update, delete: if false; 
    }

    // Attendance Summaries (for History)
    match /attendance_summaries/{dateStr} {
      allow read: if request.auth != null && isCoordinator();
      allow write: if request.auth != null && isCoordinator();
    }

    // Students (for the list)
    match /students/{studentId} {
      allow read: if request.auth != null; 
      allow write: if request.auth != null && isCoordinator();
    }

    function isAdmin() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
    }

    function isCoordinator() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student_coordinator' ||
        isAdmin()
      );
    }

    function isPublicRelation() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'public_relation_head' ||
        isAdmin()
      );
    }
  }
}
